font-thicken = true

## Theme
theme = Cobalt2

## Window
# fit more on the screen
adjust-cell-height = -12%
# better colors
window-colorspace = display-p3
window-height = 35
window-width = 90
window-padding-x = 10
window-padding-y = 10
# center window by balancing padding
window-padding-balance = true
# extend tmux panes to bottom
window-padding-color = extend
window-save-state = always

## Keybindings
